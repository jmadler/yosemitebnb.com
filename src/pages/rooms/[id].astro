---
import Layout from '../../layouts/Layout.astro';
import { rooms } from '../../data/rooms';

interface Room {
    id: string;
    label: string;
    price: string;
    description: string;
    images: string[];
    capacity: string;
    amenities: string[];
    rating: string;
    airbnbUrl: string;
    location: string;
}

export function getStaticPaths() {
    return Object.values(rooms).map((room) => ({
        params: { id: room.id },
        props: { room: room as Room },
    }));
}

const { room } = Astro.props;
---

<Layout 
  title={`${room.label} - The Getaway Yosemite`}
  meta={{
    description: `${room.label} room at The Getaway Yosemite BnB`,
    keywords: `Yosemite lodging, ${room.label}, BnB room`,
    image: room.images[0],
    url: `https://yosemitebnb.com/rooms/${room.id}`,
    structuredData: {
      "@context": "https://schema.org",
      "@type": "Room",
      "name": room.label,
      "image": room.images[0],
      "description": room.description
    }
  }}
>
    <main>
        <div class="room-details">
            <div class="image-gallery">
                {room.images.map((image: string) => (
                    <img src={image} alt={room.label} />
                ))}
            </div>

            <div class="room-info">
                <h1>{room.label}</h1>
                <p class="price">{room.price}/night</p>
                <p class="rating">‚òÖ{room.rating}</p>
                <p class="capacity">{room.capacity}</p>
                <p class="description">{room.description}</p>

                <div class="amenities">
                    <h2>Amenities</h2>
                    <ul>
                        {room.amenities.map((amenity: string) => (
                            <li>{amenity}</li>
                        ))}
                    </ul>
                </div>

                <a href={room.airbnbUrl} class="book-button" target="_blank" rel="noopener noreferrer">
                    Book on Airbnb
                </a>
            </div>

            <div class="map-container">
                <iframe 
                    width="100%" 
                    height="300" 
                    style="border:0;" 
                    loading="lazy" 
                    allowfullscreen
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2359.825042541392!2d-119.9278703875729!3d37.55537857062617!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8096b8f5a2d3aad3%3A0x2f2014a61205154!2sThe%20Getaway!5e1!3m2!1sen!2sus!4v1740016303879!5m2!1sen!2sus"
                ></iframe>
                <div class="map-links">
                    <a href="https://maps.google.com/?q=The+Getaway+6484A+CA-140+Midpines+CA+95345" 
                        class="external-link" target="_blank" rel="noopener noreferrer">
                        <span class="external-link-icon">üìç</span>
                        <span class="external-link-text">Open in Google Maps</span>
                    </a>
                    <a href="http://maps.apple.com/?q=The+Getaway+6484A+CA-140+Midpines+CA+95345" 
                        class="external-link" target="_blank" rel="noopener noreferrer">
                        <span class="external-link-icon">üìç</span>
                        <span class="external-link-text">Open in Apple Maps</span>
                    </a>
                </div>
            </div>
        </div>
    </main>
</Layout>

<style>
    .room-details {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
    }

    .image-gallery {
        display: grid;
        gap: 1rem;
    }

    .image-gallery img {
        width: 100%;
        height: auto;
        border-radius: 8px;
        object-fit: cover;
    }

    .room-info {
        padding: 1rem;
    }

    h1 {
        font-size: 2.5rem;
        color: var(--text);
        margin-bottom: 1rem;
    }

    .price {
        font-size: 1.5rem;
        color: var(--accent);
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .rating {
        font-size: 1.5rem;
        color: var(--accent);
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .capacity {
        color: var(--text);
        margin-bottom: 1.5rem;
    }

    .description {
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    .amenities {
        margin-bottom: 2rem;
    }

    .amenities h2 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    .amenities ul {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 0.5rem;
        list-style: none;
        padding: 0;
    }

    .amenities li {
        padding: 0.5rem;
        background: var(--background);
        border-radius: 4px;
    }

    .book-button {
        display: inline-block;
        background: var(--accent);
        color: white;
        padding: 1rem 2rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: background-color 0.2s;
    }

    .book-button:hover {
        background: var(--accent-light);
    }

    @media (max-width: 768px) {
        .room-details {
            grid-template-columns: 1fr;
        }
    }

    .map-container {
        margin: 2rem 0;
    }

    .map-container iframe {
        border-radius: 8px;
        margin-bottom: 1rem;
    }

    .map-links {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    @media (max-width: 768px) {
        .map-links {
            grid-template-columns: 1fr;
        }
    }
</style> 